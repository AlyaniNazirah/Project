@model InternshipManagementSystem.Models.UserModel
@{

    Layout = "~/Views/Shared/_Layout.cshtml";
}
<style>
    table, td, th {
        border: 1px solid #ddd;
        text-align: left;
    }

    table {
        border-collapse: collapse;
        width: 100%;
    }

    th, td {
        padding: 15px;
    }
</style>

    <!--//banner -->
    <!--/w3_short-->
    <div class="services-breadcrumb_w3layouts">
        <div class="inner_breadcrumb">

            <ul class="short_w3ls" _w3ls>
                <li><a href="index.html">Home</a><span>|</span></li>
                <li>Presentation Schedule</li>
            </ul>
        </div>
    </div>
<div class="tittle_head_w3ls">
    <h3 class="tittle three">Presentation Schedule</h3>
</div>
    <div class="container">
        <div class="col-lg-12 well">
            <div class="row">
                @using (Html.BeginForm("SetPresentationSchedule", "PresentationModule", FormMethod.Post))
                {
                    <div class="col-sm-12">
                        <div class="row">
                            <div class="col-sm-4 form-group" style="text-align:right;">
                                Calendar :
                            </div>
                            <div class="col-sm-8 form-group">
                                @Html.TextBoxFor(model => model.PresentationDate,
           new { required = "required", @type = "date", @Value = Model.PresentationDate })
                                @Html.HiddenFor(model => (model.Username))
                            </div>
                        </div>
                        <div class="row">
                            <div class="col-sm-4 form-group" style="text-align:right;">
                                Time :
                            </div>
                            <div class="col-sm-8 form-group">
                                @Html.TextBoxFor(model => model.PresentationTime)
                            </div>
                        </div>
                        <div class="row">
                            <div class="col-sm-4 form-group" style="text-align:right;">
                                Venue :
                            </div>
                            <div class="col-sm-8">
                                @Html.TextBoxFor(model => (model.PresentationVenue))
                            </div>
                        </div>
                        <div class="row" style="text-align:center;">
                            <button style="margin-top: 20px;" type="submit" class="btn btn-lg btn-info">Submit</button>
                        </div>
                    </div>
                }
            </div>
        </div>
    </div>
    <!-- //inner_content -->
