<div style="width: 100%; text-align:center; display:block;">
    Keyword <input type="search" id="txtSearch" /><input type="button" id="btnSearch" class="btn btn-lg btn-info" value="Search" onclick="StartSearch();" />
</div>
<br />
<script>
    function StartSearch() {
        var Text = document.getElementById('txtSearch').value;
        window.location.href = '/LogbookModule/LogbookSv/' + Text;
    }
</script>
<table>
    <tr>
        <th>Matric No</th>
        <th>Full Name</th>
        <th>Company</th>
        <th>State</th>
        <th>Option</th>
    </tr>
    @if (ViewBag.Found == false)
    {
        foreach (UserModel user in Model)
        {
            <tr>
                <td>@user.MatricID</td>
                <td>@user.FullName</td>
                <td>@user.CompanyName</td>
                <td>@user.State</td>
                <td>
                    @Ajax.ActionLink("View", "ViewPartial", new { user.Username }
               , new AjaxOptions
               {
                   HttpMethod = "GET",
                   InsertionMode = InsertionMode.Replace,
                   UpdateTargetId = "partial",
                   OnComplete = ""
               })
                </td>
            </tr>
        }
    }
    else
    {
        foreach (UserModel user in Model.Users)
        {
            <tr>
                <td>@user.MatricID</td>
                <td>@user.FullName</td>
                <td>@user.CompanyName</td>
                <td>@user.State</td>
                <td>
                    @Ajax.ActionLink("View", "ViewPartial", new { user.Username }
                   , new AjaxOptions
                   {
                       HttpMethod = "GET",
                       InsertionMode = InsertionMode.Replace,
                       UpdateTargetId = "partial",
                       OnComplete = ""
                   })
                </td>
            </tr>
        }
    }
</table>
