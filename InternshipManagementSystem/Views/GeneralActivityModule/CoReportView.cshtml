<div class="inner_content_info_agileits">
    <div class="container">
        <div class="tittle_head_w3ls">
            <h3 class="tittle">Internship Report</h3>
        </div>
        <div class="inner_sec_grids_info_w3ls">
            <div class="col-md-8 job_info_left">
                <div class="but_list">
                    <div class="bs-example bs-example-tabs" role="tabpanel" data-example-id="togglable-tabs">
                        <ul id="myTab" class="nav nav-tabs" role="tablist">
                            <li role="presentation" class="active"><a href="#home" id="home-tab" role="tab" data-toggle="tab" aria-controls="home" aria-expanded="true">Student Internship Status</a></li>
                            <li role="presentation"><a href="#profile" role="tab" id="profile-tab" data-toggle="tab" aria-controls="profile">Post Student Internship Status</a></li>
                            <li role="presentation"><a href="#profile1" role="tab" id="profile-tab1" data-toggle="tab" aria-controls="profile1">Assigned Supervisor</a></li>

                        </ul>
                        <div id="myTabContent" class="tab-content">
                            <div role="tabpanel" class="tab-pane fade in active" id="home" aria-labelledby="home-tab">
                                <div class="tab_grid">
                                    <div class="col-sm-3 loc_1">
                                        <h2><bold>Internship Release Report</bold></h2>
                                        <h4>Internship Student Details</h4>

                                        <table class="table" style="text-align:center; width:100%">
                                            <tr style="font-weight:bold; font-size:large; background-color:seashell;">
                                                <td>Student Name</td>
                                                <td>Evaluation Mark</td>
                                                <td>Status</td>
                                                <td>Faculty Supervisor</td>
                                                <td>Industrial Supervisor</td>
                                            </tr>
                                            @foreach (var item in Model)
            {

                                                <tr>
                                                    <td>@Html.Raw(item.Student_Name)</td>
                                                    <td>@Html.Raw(item.Evaluation_Mark)</td>
                                                    @{
                                                        if (item.Status == "Incompleted")
                                                        {
                                                            <td style="color:red">@Html.Raw(item.Status)</td>
                                                        }
                                                        else
                                                        {
                                                            <td style="color:green">@Html.Raw(item.Status)</td>
                                                        }
                                                    }

                                                    <td>@Html.Raw(item.Faculty_Supervisor_Name)</td>
                                                    <td>@Html.Raw(item.Industrial_Supervisor_Name)</td>
                                                </tr>
                                                        }
                                        </table>
                                        <div class="clearfix"> </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <div class="col-md-4 job_info_right">
    </div>
    <div class="clearfix"> </div>
</div>

    
