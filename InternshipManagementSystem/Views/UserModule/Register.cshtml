@model InternshipManagementSystem.Models.UserModel

@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}


<!--//banner -->
<!--/w3_short-->
<div class="services-breadcrumb_w3layouts">
    <div class="inner_breadcrumb">

        <ul class="short_w3ls" _w3ls>
            <li><a @Html.ActionLink("Home", "Index", "Home")</a><span>|</span></li>
            <li>Login</li>
        </ul>
    </div>
</div>
<body>
    @if (Session["UserId"] != null)
    {
        Response.Redirect("~/Home/Index");
    }
    <script>
        function validatePassword() {
            var password = document.getElementById("password").value;
            var confirmpassword = document.getElementById("confirmpassword").value;
            if (password == confirmpassword) {
                return true;
            }
            else {
                var error = document.getElementById("errormessage");
                error.innerHTML = "Your password is not same!";
                return false;
            }
        }
    </script>
    <div class="inner_content_info_agileits">
        <div class="container">
            <div class="tittle_head_w3ls">
                <h3 class="tittle three">Register Now </h3>
            </div>
            <br />
            <div class="row">
                @using (Html.BeginForm("Register", "UserModule", FormMethod.Post, new { onsubmit = "return validatePassword()" }))
                {
                    @Html.ValidationSummary(true, "Register failed. Check your registration details.");
                    <p id="errormessage"></p>
                        <div class="col-sm-12">
                            <div class="column">
                                <div class="col-sm-6 form-group" style="margin-bottom: 10px; text-align: center; font-size:medium">
                                    <label>@Html.RadioButtonFor(u => (u.Roles), "Student")Student</label>
                                </div>
                                <div class="col-sm-6 form-group" style="margin-bottom: 10px; text-align: center; font-size: medium">
                                    <label>@Html.RadioButtonFor(u => (u.Roles), "IndustriaL Supervisor")Industrial Supervisor</label>
                                </div>
                            </div>
                            <div class="row">
                                <div class="col-sm-6 form-group">
                                    <label>Username</label>
                                    @Html.TextBoxFor(u => (u.Username), new { required = "required", @class = "form-control", placeholder = "Enter Username..." })
                                </div>
                                <div class="col-sm-6 form-group">
                                    <label>Full Name</label>
                                    @Html.TextBoxFor(u => (u.FullName), new { required = "required", @class = "form-control", placeholder = "Enter Full Name..." })
                                </div>
                            </div>
                            <div class="row">
                                <div class="col-sm-6 form-group">
                                    <label>Password</label>
                                    @Html.TextBoxFor(u => (u.Password), new { required = "required", @class = "form-control", placeholder = "Enter Password...", id = "password", type = "password" })
                                </div>
                                <div class="col-sm-6 form-group">
                                    <label>Confirm Password</label>
                                    <input type="password" id="confirmpassword" placeholder="Confirm Password..." class="form-control" required>
                                </div>
                            </div>
                            <div class="row">
                                <div class="col-sm-6 form-group">
                                    <label>Matric ID</label>
                                    @Html.TextBoxFor(u => (u.MatricID), new { required = "required", @class = "form-control", placeholder = "Enter Matric Here.." })
                                </div>
                                <div class="col-sm-6 form-group">
                                    <label>Contact Number</label>
                                    @Html.TextBoxFor(u => (u.PhoneNumber), new { required = "required", @class = "form-control", placeholder = "Enter Contact Number Here.." })
                                </div>
                            </div>
                            <div class="row">
                                <div class="col-sm-6 form-group">
                                    <label>Email</label>
                                    @Html.TextBoxFor(u => (u.Email), new { required = "required", @class = "form-control", placeholder = "Enter Email Here.." })
                                </div>
                                <div class="col-sm-6 form-group">
                                    <label>State</label>
                                    @Html.TextBoxFor(u => (u.State), new { required = "required", @class = "form-control", placeholder = "Enter State Here.." })
                                </div>
                            </div>
                            <div class="row">
                                <div class="col-sm-6 form-group">
                                    <label>Internship Starts on</label>
                                    @Html.TextBoxFor(u => (u.InternshipPeriodStart), new { required = "required", @class = "form-control", placeholder = "Enter Email Here..", @type = "date" })
                                </div>
                                <div class="col-sm-6 form-group">
                                    <label>Internship Ends on</label>
                                    @Html.TextBoxFor(u => (u.InternshipPeriodEnd), new { required = "required", @class = "form-control", placeholder = "Enter State Here..", @type = "date" })
                                </div>
                            </div>

                            <div class="row">
                                <div class="col-sm-6 form-group">
                                    <label>Company Name</label>
                                    @Html.TextBoxFor(u => (u.CompanyName), new { required = "required", @class = "form-control", placeholder = "Enter Company Name Here.." })
                                </div>
                                <div class="col-sm-6 form-group">
                                    <label>Company Contact</label>
                                    @Html.TextBoxFor(u => (u.CompanyContact), new { required = "required", @class = "form-control", placeholder = "Enter Company Contact Number Here.." })
                                </div>
                            </div>
                            <div class="row">
                                <div class="col-sm-6 form-group">
                                    <label>Company Address</label>
                                    @Html.TextBoxFor(u => (u.CompanyAddress), new { required = "required", @class = "form-control", placeholder = "Enter Company Address Here.." })
                                </div>
                                <div class="col-sm-6 form-group">
                                    <label>Industrial Supervisor Full Name</label>
                                    @Html.TextBoxFor(u => (u.IndustrySupervisorName), new { required = "required", @class = "form-control", placeholder = "Enter Industrial Supervisor Name Here.." })
                                </div>
                            </div>
                            <div class="row style="text-align:center;">
                                <input style="align-self:center ; margin-left: 40px;" type="submit" class="btn btn-lg btn-info" value="Register">
                                <input style="align-self:center; margin-right:40px; float:right;" type="submit" class="btn btn-lg btn-info" value="Cancel" onclick="GoToHome()">

                            </div>
                            
                        </div>
                }
            </div>
        </div>
    </div>
    </div>
    <script>
        function GoToHome() {
            window.location.href = '/Home/Index';
        }
    </script>
    <div class="footer_top_agileits">
        <div class="container">
            <div class="col-md-4 footer_grid">
                <h3>About Us</h3>
                <p>
                    The main goal of the Internship Management System (InMS) is to manage and monitor the Internship’s student for students in University Malaysia Pahang during their internship duration efficiently.
                </p>
            </div>
            <div class="col-md-4 footer_grid">
                <h3>Latest News</h3>
                <ul class="footer_grid_list">
                    <li>
                        <i class="fa fa-long-arrow-right" aria-hidden="true"></i>
                        <a href="single.html">Last Submission date for Internship Student on 31/12/2018</a>
                    </li>
                    <li>
                        <i class="fa fa-long-arrow-right" aria-hidden="true"></i>
                        <a href="single.html">Register with us.</a>
                    </li>
                </ul>
            </div>
            <div class="col-md-4 footer_grid">
                <h3>Contact Info</h3>
                <ul class="address">
                    <li><i class="fa fa-map-marker" aria-hidden="true"></i>No 1/100, Jalan Yang Benar, <span>Malaysia.</span></li>
                    <li><i class="fa fa-envelope" aria-hidden="true"></i><a href="mailto:futuretech@gmail.com">futuretech@gmail.com</a></li>
                    <li><i class="fa fa-phone" aria-hidden="true"></i>+6011-22334455</li>
                </ul>
            </div>
            <div class="clearfix"> </div>
        </div>
    </div>
    <div class="footer_w3ls">
        <div class="container">
            <div class="footer_bottom">
                <div class="col-md-9 footer_bottom_grid">
                    <div class="footer_bottom1">
                        <a>
                            <li>@Html.ActionLink("Home", "Index", "Home")</li>
                            <h2><span class="fa fa-signal" aria-hidden="true"></span> InMs <label>Future Tech</label></h2>
                        </a>
                        <p>© 2017 FutureTech. All rights reserved</a></p>
                    </div>
                </div>
                <div class="col-md-3 footer_bottom_grid">
                    <h6>Follow Us</h6>
                    <div class="social">
                        <ul>
                            <li><a href="#"><i class="fa fa-facebook"></i></a></li>
                            <li><a href="#"><i class="fa fa-twitter"></i></a></li>
                            <li><a href="#"><i class="fa fa-rss"></i></a></li>
                        </ul>
                    </div>
                </div>
                <div class="clearfix"> </div>
            </div>

        </div>
    </div>
    <!-- //footer -->

    <a href="#home" class="scroll" id="toTop" style="display: block;"> <span id="toTopHover" style="opacity: 1;"> </span></a>
    <!-- js -->
    <!-- //password-script -->
    <script type="text/javascript" src="js/bootstrap.js"></script>


</body>

